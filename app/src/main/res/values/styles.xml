<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/splashScreenColor</item>
    </style>

    <style name="Widget.AppWidget.Checkbox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:minHeight">@dimen/widget_element_min_length_small</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.AppWidget.Checkbox.Small" parent="Widget.AppWidget.Checkbox">
        <item name="android:minHeight">@dimen/widget_element_min_length_tiny</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Widget.AppWidget.AppWidget.Container" parent="android:Widget">

        <item name="android:background">?android:attr/colorBackground</item>
    </style>
<!--    <item name="android:id">@android:id/background</item>-->

</resources>