<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/widget_element_min_length_small">

        <TextView
            android:id="@+id/checkbox_list_title"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/todo_list_date"
            android:textColor="?android:attr/textColorPrimary" />
<!--        android:textColor="?android:attr/colorAccent"-->

        <ImageButton
            android:layout_width="@dimen/widget_element_min_length_small"
            android:layout_height="@dimen/widget_element_min_length_small"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:scaleType="fitXY"
            android:contentDescription="@string/add_button_todo_list_content_description"
            android:src="@drawable/ic_add"
            android:tint="?android:attr/colorAccent" />
<!--       -->
    </LinearLayout>
</merge>